set nu
set ruler
set nowrap
" colo blue

set encoding=utf-8
set termencoding=utf-8
set fileencoding=utf-8

" syntax on
syntax enable
" set background=dark
" colorscheme solarized

set hlsearch
set nobackup
set showcmd

" 设置tab=4
"set shiftwidth=4
"set sts=4
"set tabstop=4
" tab->空格
" set expandtab

" 不备份
set nobackup
set nowritebackup

" 不要工具条
set guioptions-=T
set nomodeline

set tags=tags;/,codex.tags;/
